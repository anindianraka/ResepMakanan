<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img_resep"
            />
        <TextView
            android:id="@+id/tv_namaresep"
            android:text="Nama Resep"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/img_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:id="@+id/tv_deskripsi_resep"
            android:layout_below="@+id/tv_namaresep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi resep"
            android:layout_alignStart="@+id/tv_namaresep" />
        </RelativeLayout>
</android.support.v7.widget.CardView>